# Simple Local AI Setup: OpenWebUI + Ollama
# Author: Shazaly Musa
# Description: Quick setup to run a local AI chatbot UI using Docker

# 1. Create a folder for the project
mkdir "$HOME\SimpleAISetup"
cd "$HOME\SimpleAISetup"

# 2. Create the docker-compose.yml file (basic version)
@"
version: '3.8'

services:
  ollama:
    image: ollama/ollama
    ports:
      - "11434:11434"
    volumes:
      - ollama:/root/.ollama

  openwebui:
    image: ghcr.io/open-webui/open-webui:main
    ports:
      - "3000:8080"
    environment:
      - OLLAMA_BASE_URL=http://ollama:11434
    volumes:
      - openwebui:/app/backend/data

volumes:
  ollama:
  openwebui:
"@ | Out-File "docker-compose.yml" -Encoding UTF8

# 3. Start everything
docker-compose up -d

# 4. Done!
Write-Host "`nâœ… Done! Visit http://localhost:3000 to use your local AI chatbot!"
